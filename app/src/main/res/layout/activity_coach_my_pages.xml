            android:orientation="vertical">


            <ImageView
                android:id="@+id/setting"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingLeft="20dip"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:background="@drawable/iconshezhi2"/>


            <com.cn.coachs.util.CircleImageView
                android:id="@+id/image_informationManage"
                android:layout_width="70dip"
                android:layout_height="70dip"
                app:border_color="@color/whitesmoke"
                app:border_width="2dp" />

            <TextView
                android:id="@+id/name_informationManage"
                style="@style/text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dip"
                android:gravity="center"
                android:text="刘军"
                android:textColor="@color/white" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:contentDescription="@null"
                    />

                <ImageView
                android:id="@+id/image2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/image1"
                android:contentDescription="@null" />
                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/image2"
                    android:contentDescription="@null" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/image3"
                    android:contentDescription="@null"/>
                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/image4"
                    android:contentDescription="@null" />


                <TextView
                    android:id="@+id/score_text"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/image5"
                    android:layout_gravity="center"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>

