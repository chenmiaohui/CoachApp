<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_second"
    android:orientation="vertical"
    android:paddingBottom="1dip" >

    <include
        android:id="@+id/common_title"
        layout="@layout/main_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/settlement"
            android:name="com.cn.coachs.ui.patient.others.myaccount.SettlementFrag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <fragment
            android:id="@+id/income_record"
            android:name="com.cn.coachs.ui.patient.others.myaccount.IncomeFrag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4" />
    </LinearLayout>

</LinearLayout>