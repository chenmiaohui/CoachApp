<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/main_layout"
    android:background="@color/gray_second">
    <include
        android:id="@+id/common_title"
        layout="@layout/main_top" />
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:background="@color/lightgray"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/> 
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:background="@drawable/border">
	    <EditText 
	        android:layout_marginLeft="10dp"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:textColorHint = "@color/font_gray"
	        android:hint="请输入您的手机号"
	        android:gravity="center_vertical"
	        android:id="@+id/phone_Register"
	        android:inputType="number"
	        android:background="@null"
	        android:textCursorDrawable="@null"
	        style="@style/text_style"/>
	    <ImageView 
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:id="@+id/delete_Login"
	        android:src="@drawable/txt_clear"	
	        android:layout_alignParentRight="true"
	        android:visibility="gone"
	        />
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_marginTop="0dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:background="@drawable/border">
	    <EditText 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	       	android:id="@+id/code_Register"
	        android:hint="请输入验证码" 
	        android:textColorHint = "@color/font_gray"
	        android:layout_marginLeft="10dp"
	        android:gravity="center_vertical"
	        style="@style/text_style"
	        android:inputType="number"
	        android:src="@drawable/txt_clear"
	        android:textCursorDrawable="@null"
	        android:background="@null"	
	        />


	    <com.cn.coachs.util.FButton
            android:layout_width="100dp"
	        android:layout_height="match_parent"
	        android:id="@+id/getCode_Register"
	        android:text="获取验证码"
            android:minHeight="@dimen/demo_button_min_height"
            android:minWidth="@dimen/demo_button_min_width"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            fbutton:buttonColor="@color/blue_second"
            fbutton:shadowEnabled="false" />
	    <ImageView 
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:id="@+id/delete1_Login"
	        android:src="@drawable/txt_clear"
	        android:visibility="gone"
	        android:layout_toLeftOf="@id/getCode_Register"/>
	</RelativeLayout>
	
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_marginTop="0dp"
	    android:layout_marginLeft="10dp"
	      android:visibility="gone"
	    android:layout_marginRight="10dp"
	    android:background="@drawable/border">
	    <EditText 
	       	android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:hint="请输入邀请码(选填)"
	        android:layout_marginLeft="10dp"
	        android:gravity="center_vertical"
	        android:id="@+id/invitationCode_Register"
	        android:textCursorDrawable="@null"
	        android:textColorHint = "@color/font_gray"
	        android:inputType="number"
	        android:background="@null"
	        style="@style/text_style"/>
	    <ImageView 
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:id="@+id/delete4_Login"
	        android:src="@drawable/txt_clear"	
	        android:layout_alignParentRight="true"
	        android:visibility="gone"/>
	</RelativeLayout>
	
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:visibility="gone"
	    android:layout_height="60dp"
	    android:layout_marginTop="0dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:background="@drawable/border">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="性别："
	        android:layout_marginLeft="10dip"
	        style = "@style/text_style"
	        android:gravity="center"/>"
	    <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:contentDescription="性别" 
            android:orientation="horizontal">

            <RadioButton
                android:layout_marginLeft="10dip"
                android:id="@+id/radioMale"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="男" 
                style="@style/text_style">
            </RadioButton>
     		<RadioButton 
        		android:layout_width="0dip"
                android:layout_weight="1"
         		android:layout_height="wrap_content" 
         		android:id="@+id/radioFemale" 
         		android:text="女"
         		style="@style/text_style">
     		</RadioButton> 
       </RadioGroup>
	</LinearLayout>
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_marginTop="0dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:background="@drawable/border">
	    <EditText 
	       	android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:hint="请输入密码"
	        android:layout_marginLeft="10dp"
	        android:gravity="center_vertical"
	        android:id="@+id/password_Register"
	        android:textCursorDrawable="@null"
	        android:textColorHint = "@color/font_gray"
	        android:background="@null"
	        style="@style/text_style"/>
	    <ImageView 
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:id="@+id/delete2_Login"
	        android:background="@drawable/iconfont_kejian"	
	        android:layout_alignParentRight="true"/>
	        <ImageView 
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:id="@+id/delete2_Login_l"
	        android:visibility="gone"
	        android:background="@drawable/iconfont_bukejian"	
	        android:layout_alignParentRight="true"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_marginTop="0dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:visibility="gone"
	    android:background="@drawable/border">
	    <EditText 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:hint="请再次输入密码"
	        android:layout_marginLeft="10dp"
	        android:id="@+id/password2_Register"
	        android:gravity="center_vertical"
	        android:password="true"
	        android:textCursorDrawable="@null"
	        android:textColorHint = "@color/font_gray"
	        android:background="@null"
	        style="@style/text_style"/>
	    <ImageView 
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:id="@+id/delete3_Login"
	        android:src="@drawable/txt_clear"	
	        android:layout_alignParentRight="true"
	        android:visibility="gone"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:gravity="center"
	    android:layout_marginTop="20dip">
		   <com.cn.coachs.util.FButton
            android:layout_width="match_parent"
			android:id="@+id/submit_Register"
			android:layout_height="45dp"
			android:text="注册"
            android:minHeight="@dimen/demo_button_min_height"
            android:minWidth="@dimen/demo_button_min_width"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            fbutton:buttonColor="@color/blue_second"
            fbutton:cornerRadius="1dp"
            fbutton:shadowEnabled="false" />
	</LinearLayout>

</LinearLayout>
 