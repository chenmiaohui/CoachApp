        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layout_mymoney"
                android:layout_width="0dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:background="@drawable/setting_item_selector"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_mymoney"
                    style="@style/text_style"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:text="0.00元"
                    android:textColor="@color/orange" />

                <TextView
                    style="@style/text_style"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="我的钱包"
                    android:textColor="@color/font_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@color/lightgray" />

            <LinearLayout
                android:id="@+id/layout_mybonus"
                android:layout_width="0dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:background="@drawable/setting_item_selector"
                android:orientation="vertical"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tv_bonus"
                    style="@style/text_style"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:textColor="@color/red" />

                <TextView
                    style="@style/text_style"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="我的粉丝"
                    android:textColor="@color/font_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@color/lightgray" />

            <LinearLayout
                android:id="@+id/layout_myscore"
                android:layout_width="0dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:background="@drawable/setting_item_selector"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_score"
                        style="@style/text_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|bottom"
                        android:text="0个"
                        android:textColor="@color/lightgreen" />

                    <TextView
                        android:id="@+id/add_num"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top|right"
                        android:background="@color/transparent"
                        android:paddingRight="@dimen/SmallPadding"
                        android:text="+3"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    style="@style/text_style"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="我的金币"
                    android:textColor="@color/font_gray"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.cn.coachs.ui.chat.common.view.SettingItem
                android:id="@+id/txt_mymsg"
                style="@style/settings_item_layout_single"
                android:layout_marginTop="@dimen/dialog_padding"
                app:item_showDivider="false"
                app:item_titleText="我的消息" 
                android:visibility="gone"/>
            <com.cn.coachs.ui.chat.common.view.SettingItem
                android:id="@+id/txt_mycode"
                style="@style/settings_item_layout_single"
                android:layout_marginTop="@dimen/dialog_padding"
                app:item_showDivider="false"
                app:item_titleText="我的二维码" />
            <com.cn.coachs.ui.chat.common.view.SettingItem
                android:id="@+id/txt_myfamily"
                style="@style/settings_item_layout_single"
                android:layout_marginTop="@dimen/dialog_padding"
                app:item_showDivider="true"
                app:item_titleText="我的提醒" />

            <com.cn.coachs.ui.chat.common.view.SettingItem
                android:id="@+id/txt_myorders"
                style="@style/settings_item_layout_single"
                app:item_showDivider="false"
                app:item_titleText="我的绩效" />
<!--             
           <coachschat.common.view.SettingItem
                android:id="@+id/my_two_dimension_codeing"
                style="@style/settings_item_layout_single"
                app:item_showDivider="false"
                app:item_titleText="我的二维码" /> -->

            <com.cn.coachs.ui.chat.common.view.SettingItem
                android:id="@+id/setting"
                style="@style/settings_item_layout_single"
                android:layout_marginTop="@dimen/dialog_padding"
                app:item_showDivider="true"
                app:item_titleText="设置" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>