<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/main_top"/>

    <RelativeLayout
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/keep_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="春季干燥如何养生"
            style = "@style/text_large_style"></TextView>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dip"
            android:layout_below="@id/keep_health">

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者：梁丽"
            style="@style/text_style" 
            android:textColor="@color/font_gray"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015年3月29日"
            style="@style/text_style" 
            android:layout_marginLeft="10dip"
            android:textColor="@color/font_gray"/>
        </LinearLayout>
    </RelativeLayout>
    


        <TextView
            android:background="@drawable/list_biankuang"
            android:layout_margin="10dp"
            android:gravity="top"
            android:padding="10dip"
            android:id="@+id/article_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="        春季养生，就是指在春天通过各
种方法颐养生命、增强体质、预防疾病，从而达到延年益寿的一种春季养生医事活动。所谓生，就是生命、生存、生长之意；所谓养，即保养、调养、补养之意。总之，养生就是保养生命的意思。以传统中医理论为指导，遵循阴阳五行生化收藏之变化规律，对人体进行科学调养，保持生命健康活力。"
            style = "@style/text_style"
            android:singleLine="false"></TextView>


</LinearLayout>