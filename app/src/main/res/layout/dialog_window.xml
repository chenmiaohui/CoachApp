<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout
		android:id="@+id/dia_head"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dip"
		android:layout_marginTop="10dip">
		<ImageView
			android:id="@+id/dia_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" />
		
		
		<TextView
			android:id="@+id/dia_title"
			android:text=""
			android:hint="标题"
			android:textSize="21dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/dia_icon"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dip" />
	</RelativeLayout>
	<TextView
		android:layout_below="@+id/dia_head"
		android:layout_above="@+id/dia_button"
		android:id="@+id/diaTextView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:drawSelectorOnTop="false"
		android:layout_marginTop="10dip"
		android:layout_marginBottom="20dip"
		android:layout_marginRight="20dip"
		android:layout_marginLeft="20dip" />
	<ListView
		android:layout_below="@+id/dia_head"
		android:layout_above="@+id/dia_button"
		android:id="@+id/diaListView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawSelectorOnTop="false"
		android:layout_marginTop="10dip"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:layout_marginBottom="10dip" />
	<LinearLayout
		android:id="@+id/dia_button"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="30dip"
		android:layout_marginRight="30dip"
		android:layout_alignParentBottom="true">
		<!-- android:onClick="customBtnOnClick" -->
		<Button
			android:id="@+id/btnDialogCustom"
			android:layout_centerHorizontal="true"
			android:textSize="13sp"
			android:layout_weight="1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
		<Button
			android:id="@+id/btnDialogClose"
			android:layout_centerHorizontal="true"
			android:text="关闭窗口"
			android:textSize="13sp"
			android:layout_weight="1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>
</RelativeLayout>