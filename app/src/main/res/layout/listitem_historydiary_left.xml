        <TextView
            android:id="@+id/health_time"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="14:00"
            android:textColor="@color/blue_third"
            android:textSize="16dip"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:orientation="vertical" >

        <View
            android:layout_width="2dip"
            android:layout_height="0dip"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_gravity="center"
            android:src="@drawable/ganyu_timepoint" />

        <View
            android:layout_width="2dip"
            android:layout_height="0dip"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_top_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingBottom="30dip"
        android:paddingLeft="0dip"
        android:paddingRight="10dip"
        android:paddingTop="30dip" >

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_dialog"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/health_tips"
                style="@style/text_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="0dip"
                android:layout_weight="4"
                android:gravity="center"
                android:singleLine="false"
                android:text="hh" />

            <TextView
                android:id="@+id/num_fans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"               
                android:textColor="@color/blue_third" />
        </LinearLayout>
    </LinearLayout>

